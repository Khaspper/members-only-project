<section class="md:w-fit text-white flex flex-col mt-5 max-w-[300px]">
  <p>
    <% if (userIsAuthenticated) { %>
    <%= message.username %>
    <% } else { %>
    <p>SECRET :33333 USER</p>
    <% } %>
    <span class="text-xs text-gray-400"> <%= message.message_date %> </span>
  </p>
  <div class="rounded-b-lg rounded-tr-lg bg-zinc-700 p-5 w-full h-full">
    <% if (userIsAuthenticated) { %>
    <p><%= message.title %></p>
    <p><%= message.message %></p>
    <% } else { %>
    <p>SECRET :33333 YOU'RE NOT ALLOWED TO SEE IT TEE HEE HEE</p>
    <% } %>
  </div>
    <% if (userIsAdmin) { %>
      <form action="/" method="POST">
        <input type="text" name="id" id="id" value='<%= message.id %>' readonly hidden>
        <button type="submit">Delete Message</button></form>
    <% } %>
</section>
